<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayout">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:weightSum="1">

            <!-- https://www.youtube.com/watch?v=bmeSXhAtDDk  (set title)-->


                <!--https://developer.android.com/training/appbar/setting-up.html
                FÃ¼r die Initialisierung der Toolbar in der Activity-->

        <EditText
            android:id="@+id/input_what"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:hint="@string/hint_what"
            android:inputType="textMultiLine"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

                <!--android:layout_below="@+id/my_toolbar"
                        android:layout_weight="0.09"-->
        <Button
            android:id="@+id/sendButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/MetallicSeaweed"
            android:text="@string/save_button"
            android:textColor="@color/WhiteSmoke"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/button_cow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_kuh"
                android:backgroundTint="@android:color/transparent"
                android:elevation="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_kuh"
                android:layout_below="@+id/input_what"
                android:layout_toEndOf="@+id/button_unicorn"/>

            <ImageButton
                android:id="@+id/button_explosion"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_atompilz"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_atompilz"
                android:layout_below="@+id/input_what"
                android:layout_toEndOf="@+id/button_bat"/>

            <ImageButton
                android:id="@+id/button_penguin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_pinguin"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_pinguin"
                android:layout_alignTop="@+id/button_cow"
                android:layout_toEndOf="@+id/button_cow"/>

            <ImageButton
                android:id="@+id/button_shit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_haufen"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_haufen"
                android:layout_align="@id/button_unicorn"
                android:layout_marginStart="11dp"
                android:layout_below="@+id/input_what"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/button_unicorn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_unicorn"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_unicorn"
                android:layout_below="@+id/input_what"
                android:layout_toEndOf="@+id/button_shit"/>

            <ImageButton
                android:id="@+id/button_bat"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/ic_bat"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@mipmap/ic_bat"
                android:layout_alignTop="@+id/button_penguin"
                android:layout_toEndOf="@+id/button_penguin"/>

        </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer"
        />

</android.support.v4.widget.DrawerLayout>