<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayout">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhiteSmoke"
            android:weightSum="1">

            <!-- https://www.youtube.com/watch?v=bmeSXhAtDDk  (set title)-->
            <include
                layout="@layout/nav_actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <!--https://developer.android.com/training/appbar/setting-up.html
                FÃ¼r die Initialisierung der Toolbar in der Activity-->

            <EditText
                android:id="@+id/input_what"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="58dp"
                android:hint="@string/hint_what"
                android:inputType="textMultiLine"
                android:textAlignment="center" />

                <!--android:layout_below="@+id/my_toolbar"
                        android:layout_weight="0.09"-->
        <Button
            android:id="@+id/sendButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/MetallicSeaweed"
            android:text="@string/save_button"
            android:textColor="@color/WhiteSmoke"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/cow"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="wrap_content"

                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_kuh"
                android:layout_marginStart="34dp"
                android:layout_below="@+id/input_what"
                android:layout_alignParentStart="true"/>

            <ImageButton
                android:id="@+id/explosion"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_what"
                android:layout_toEndOf="@+id/cow"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_atompilz"/>

            <ImageButton
                android:id="@+id/penguin"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_what"
                android:layout_toEndOf="@+id/explosion"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_pinguin"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_what"
                android:layout_toEndOf="@+id/penguin"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_haufen"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@mipmap/ic_unicorn"
                android:layout_below="@+id/input_what"
                android:layout_toEndOf="@+id/imageButton5" />

        </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer"
        app:headerLayout="@layout/nav_header"
        />

</android.support.v4.widget.DrawerLayout>