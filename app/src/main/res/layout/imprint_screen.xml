<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/imprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Impressum"
        android:textAppearance="@android:style/TextAppearance.Material.Title" />

    <TextView
        android:id="@+id/idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imprint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Idee: Minh Duc Lam, Daniela Krapf, Anne Köthke"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/design_emote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coding"
        android:layout_centerHorizontal="true"
        android:text="Design Emoticons: Daniela Krapf"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/coding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding: Minh Duc Lam, Daniela Krapf, Anne Köthke"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_below="@+id/idea"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/database"
        android:layout_centerHorizontal="true"
        android:text="Irgendein tiefsinniger Scheiß hier unten noch"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/design_emote"
        android:layout_centerHorizontal="true"
        android:text="Datenbank: Anne Köthke"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <Button
        android:id="@+id/button_imprint_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:text="Back" />

</RelativeLayout>