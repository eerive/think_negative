<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/WhiteSmoke"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- https://www.youtube.com/watch?v=bmeSXhAtDDk  (set title)-->

        <!--https://developer.android.com/training/appbar/setting-up.html
            FÃ¼r die Initialisierung der Toolbar in der Activity-->

    <!--android:layout_below="@+id/my_toolbar"
                    android:layout_weight="0.09"-->

    <ImageView
        android:id="@+id/fotoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Gainsboro"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/input_what"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_what"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:weightSum="1"
        android:layout_above="@+id/add_foto"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/button_cow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/ic_kuh"
            android:backgroundTint="@android:color/transparent"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_kuh" />

        <ImageButton
            android:id="@+id/button_explosion"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/ic_atompilz"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_atompilz" />

        <ImageButton
            android:id="@+id/button_penguin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1.19"
            android:background="@mipmap/ic_pinguin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_pinguin" />

        <ImageButton
            android:id="@+id/button_shit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:background="@mipmap/ic_haufen"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_haufen" />

        <ImageButton
            android:id="@+id/button_unicorn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="17dp"
            android:background="@mipmap/ic_unicorn"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_unicorn" />

        <ImageButton
            android:id="@+id/button_bat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/ic_bat"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_bat" />
    </LinearLayout>

    <Button
        android:id="@+id/add_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sendButton"
        android:layout_alignBottom="@+id/sendButton"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/sendButton"
        android:background="@color/MetallicSeaweed"
        android:text="ADD PHOTO"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button.Colored" />

    <Button
        android:id="@+id/sendButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="113dp"
        android:background="@color/MetallicSeaweed"
        android:text="@string/save_button"
        android:textColor="@color/WhiteSmoke"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
