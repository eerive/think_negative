<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ss17.droid.unir.thinknegative">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_atompilz"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_atompilz_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImprintScreenActivity"
            android:theme="@style/ImprintTheme"></activity>
        <activity
            android:name=".DefaultIntroActivity"
            android:label="Intro label"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>